<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_home"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/rl_top"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			style="@style/TitleStyle"
			android:gravity="center"
			android:text="道路环境"
			android:textColor="#147cc4"
			android:textSize="22sp" />

		<TextView
			android:id="@+id/tv_back"
			style="@style/TitleStyle"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="@drawable/returnactivity" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="70dp"
			android:text="空气质量:"
			android:textColor="#000000"
			android:textSize="30sp" />

		<Button
			android:id="@+id/btn_query"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="245dp"
			android:layout_marginTop="70dp"
			android:background="@drawable/query_blue"
			android:textColor="#000000"
			android:textSize="25sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<VideoView
			android:id="@+id/vv_video"
			android:layout_width="300dp"
			android:layout_height="200dp"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="20dp"
			android:visibility="invisible" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_result"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="20dp"
				android:text="加载中..."
				android:textColor="#000000"
				android:textSize="25sp" />

			<TextView
				android:id="@+id/tv_des_pm2_5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="20dp"
				android:text="PM2.5污染太严重，请全副武装哦！"
				android:textColor="#000000"
				android:textSize="25sp"
				android:visibility="gone" />

			<TextView
				android:id="@+id/tv_des_co2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="5dp"
				android:text="CO2污染太严重了啊！"
				android:textColor="#000000"
				android:textSize="25sp"
				android:visibility="gone" />

			<TextView
				android:id="@+id/tv_des_temperature"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="5dp"
				android:text="温度过低"
				android:textColor="#000000"
				android:textSize="25sp"
				android:visibility="gone" />

			<TextView
				android:id="@+id/tv_des_humidity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="5dp"
				android:text="湿度太大了"
				android:textColor="#000000"
				android:textSize="25sp"
				android:visibility="gone" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="70dp"
			android:text="光照强度:"
			android:textColor="#000000"
			android:textSize="30sp" />

		<Button
			android:id="@+id/btn_illumination"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="245dp"
			android:layout_marginTop="70dp"
			android:background="@drawable/query_blue"
			android:textColor="#000000"
			android:textSize="25sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<VideoView
			android:layout_width="300dp"
			android:layout_height="200dp"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="20dp"
			android:visibility="invisible" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_result2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="20dp"
				android:text="加载中..."
				android:textColor="#000000"
				android:textSize="25sp" />

			<TextView
				android:id="@+id/illumination"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="20dp"
				android:text="太刺眼了!"
				android:textColor="#000000"
				android:textSize="25sp"
				android:visibility="gone" />

		</LinearLayout>
	</LinearLayout>

</LinearLayout>